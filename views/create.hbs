<div class='main-container'>
  {{> mainHeader}}
  <div class='middle-container'>
    <div class='graph-area'>
      <div class='graph-area__header'>
        <h2 class='title graph-area__header-title'>Graph</h2>
        <div class='graph-area__count-wrap'>
          <h2 class='graph-area__count-wrap-label'>Hotspots: <span class="graph-area_count-wrap-count">0</span></h2>
        </div>
      </div>
      <div class='graph-area__graph-canvas'></div>
      <button class="btn btn--full-width" type="button" name="reset">Start Over</button>
    </div>
    <div class='guide'>
